<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<!-- uncomment the RollingFile element for publication on Software center -->
		<RollingFile name="File" filePattern="logs/$${date:yyyy-MM-dd-hh-mm-ss}.efsa.log">
			<PatternLayout>
				<pattern>%d %p %c{1.} [%t] %m%n</pattern>
			</PatternLayout>
			<OnStartupTriggeringPolicy/> Every time that the application is run, a new log file is created 
		</RollingFile>
		<!--  -->
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
			<!-- <AppenderRef ref="File" /> -->
		</Root>
	</Loggers>
</Configuration>